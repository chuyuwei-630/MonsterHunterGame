using namespace std;

class Player {
public:
    string name;
    int level = 1;
    int exp = 0;
    int maxExp = 100;
    int maxHp = 100;
    int hp = 100;
    int attack = 10;
    int skillPoints = 0;

    Player(string n) : name(n) {}

    void gainExp(int amount) {
        exp += amount;
        cout << "ä½ ç²å¾—äº† " << amount << " é»žç¶“é©—å€¼ï¼" << endl;
        while (exp >= maxExp) {
            levelUp();
        }
    }

    void levelUp() {
        exp -= maxExp;
        level++;
        maxExp += 50;
        maxHp += 20;
        hp = maxHp;
        attack += 2;
        skillPoints++;
        cout << "ðŸŽ‰ å‡ç´šäº†ï¼ç¾åœ¨æ˜¯ Lv." << level << endl;
        cout << "ðŸ’– æœ€å¤§ HP å¢žåŠ ç‚º " << maxHp << "ï¼Œè¡€é‡è£œæ»¿ï¼æ”»æ“ŠåŠ› +" << 2 << endl;
        cout << "â­ æŠ€èƒ½é»ž +" << 1 << endl;
    }

    void printStatus() {
        cout << "ðŸ”¹ [" << name << "] Lv." << level
             << " | HP: " << hp << "/" << maxHp
             << " | EXP: " << exp << "/" << maxExp
             << " | ATK: " << attack
             << " | SP: " << skillPoints << endl;
    }
};
